<Window x:Class="Strana.Revit.ViewModelTest.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор связей" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="revitLinksList" Grid.Row="0" ItemsSource="{Binding RevitLinkNames}" SelectionMode="Multiple"/>
        <Button Grid.Row="1" Content="OK" Click="OkButton_Click" HorizontalAlignment="Right" Margin="10"/>
    </Grid>
</Window>
